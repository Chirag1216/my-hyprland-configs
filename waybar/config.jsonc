// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 28, // Waybar height (to be removed for auto height)
    "margin-bottom":19,
    "width": 1600, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "custom/media"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "pulseaudio",
        "network",
        "battery",
        "power-profiles-daemon",
        "bluetooth"
    ],

"hyprland/workspaces": {
	"format": "{name}",
	"format-icons": {
		"1": "ÔÑ†",
		"2": "Ôâ®",
		"3": "ÔÑ°",
		"4": "ÔÜº",
		"5": "ÔÅµ",
		"active": "ÔÜí",
		"default": "ÔÑë"
	},
       "persistent-workspaces": {
             "*": 5, // 5 workspaces by default on every monitor
             "HDMI-A-1": 3 // but only three on HDMI-A-1
       }
},
    //Original Clock
    //"clock": {
        // "timezone": "America/New_York",
       // "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      //  "format-alt": "{:%Y-%m-%d}"
    //},
    //End of Orginal clock

"clock": {
    "interval": 1, // Update every second for current time
    "format": "{:%H:%M}", // Your preferred time format
    "format-alt": "{:%Y-%m-%d}", // Optional: Alt format when pressing Super/Mod key
    "tooltip": true, // Enable tooltip
    "tooltip-format": "<tt><small>{calendar}</small></tt>", // This is the key line for the calendar
    "calendar": {
        "mode": "month", // Show current month
        "mode-mon-col": 3,
        "weeks-pos": "right",
        "on-scroll": 1, // Scroll by one month/year
        "on-click-right": "mode", // Right-click to switch between month/year view
        "format": {
            "months": "<span color='#8be9fd'><b>{}</b></span>", // Cyan for months
            "days": "<span color='#f8f8f2'>{}</span>", // White for days
            "weeks": "<span color='#bd93f9'>W{}</span>", // Purple for week numbers
            "weekdays": "<span color='#ff7f00'><b>{}</b></span>", // Orange for weekdays
            "today": "<span color='#ff5555'><b><u>{}</u></b></span>" // Red and underlined for today
        }
    },
    // Actions for scrolling through the calendar (optional)
    "actions": {
        "on-scroll-up": "shift_up",
        "on-scroll-down": "shift_down"
    }
},



    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "interval":1,
        "format-charging": "{capacity}% Û±ä§",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "power-profiles-daemon": {
      "format": "{icon}",
